@model IEnumerable<DienMayQT.Models.slideAd>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<h2 class="title">Quản lý ảnh quảng cáo</h2>

<p style="text-align:right;">
    <button class="create-btn" onclick="location.href='@Url.Action("Create", "AdsAdmin")'"><i class="fa fa-plus-circle" aria-hidden="true"></i>  Create</button>
</p>

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Danh sách ảnh quảng cáo
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Image Ads Name</th>
                        <th>Image</th>
                        <th>Content</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Image Ads Name</th>
                        <th>Image</th>
                        <th>Content</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nameAds)
                            </td>
                
                            <td>
                                <img src="/imgads/@Url.Content(item.image)" width="150px" height="150px" />
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.content)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.status)
                            </td>

                            <td>
                                <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Edit", new { id = item.ID })'"><i class="fa fa-pencil" aria-hidden="true"></i></button>
                                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", new { id = item.ID })'"><i class="fa fa-trash" aria-hidden="true"></i></button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
