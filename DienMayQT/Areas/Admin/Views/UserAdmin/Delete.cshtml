@model DienMayQT.Models.User

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="title">Xóa tài khoản người dùng</h2>

<h3 style="color: #FF4500;text-align:center;">Are you sure you want to delete this User?</h3>
<div>
    <hr />
    <dl class="dl-horizontal" align="center">
        <dt>
            @Html.DisplayNameFor(model => model.username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.username)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.phone)
        </dd>



    </dl>

    <div align="center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" style="font-size: 20px; margin-bottom: 20px; background-color: #D3D3D3; color: white; margin-top: 12px; height: 48px; width: 110px;" />
            </div>
        }
        <button class="cancel-btn" onclick="location.href='@Url.Action("Index", "UserAdmin")'" style="margin-left:250px;margin-bottom:50px;margin-top:50px;">Cancel</button>
    </div>
</div>

